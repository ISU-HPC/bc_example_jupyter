#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>
module load git


# Load additional modules on the GPU node

if [[ $(hostname) == *"gpu"* ]]
  then
    module load cudnn/8.4.0.27-11.6-cuda11-3ivgmmo
    export XLA_FLAGS=--xla_gpu_cuda_data_dir=/usr/local/cuda-11.8
fi




# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

#fix a problem on hpc-class
unset XDG_RUNTIME_DIR

# Launch the Jupyter Notebook Server
set -x
jupyter <%= context.jupyter_generation %> --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
